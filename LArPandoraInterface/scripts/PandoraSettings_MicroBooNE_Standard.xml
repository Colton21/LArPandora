<!-- Pandora settings xml file -->

<pandora>
    <!-- HELPER CLASS SETTINGS -->
    <IsMonitoringEnabled>false</IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo>false</ShouldDisplayAlgorithmInfo>
    <SingleHitTypeClusteringMode>true</SingleHitTypeClusteringMode>
    <ShouldCollapseMCParticlesToPfoTarget>false</ShouldCollapseMCParticlesToPfoTarget>

    <EmShowerFastFunction>LArEmShowerId</EmShowerFastFunction>
    <PhotonFastFunction>LArPhotonId</PhotonFastFunction>
    <ElectronFastFunction>LArElectronId</ElectronFastFunction>
    <MuonFastFunction>LArMuonId</MuonFastFunction>

    <!-- COSMIC RAY RECONSTRUCTION -->
    <algorithm type = "LArListPreparation">
        <OnlyAvailableCaloHits>true</OnlyAvailableCaloHits>
        <OutputCaloHitListNameW>CaloHitListW</OutputCaloHitListNameW>
        <OutputCaloHitListNameU>CaloHitListU</OutputCaloHitListNameU>
        <OutputCaloHitListNameV>CaloHitListV</OutputCaloHitListNameV>
        <FilteredCaloHitListName>CaloHitListFiltered</FilteredCaloHitListName>
        <CurrentCaloHitListReplacement>CaloHitListW</CurrentCaloHitListReplacement>
        <MCNeutrinoSelection>false</MCNeutrinoSelection>
        <OutputMCParticleListNameU>MCParticleListU</OutputMCParticleListNameU>
        <OutputMCParticleListNameV>MCParticleListV</OutputMCParticleListNameV>
        <OutputMCParticleListNameW>MCParticleListW</OutputMCParticleListNameW>
        <OutputMCParticleListName3D>MCParticleList3D</OutputMCParticleListName3D>
        <CurrentMCParticleListReplacement>MCParticleList3D</CurrentMCParticleListReplacement>
        <MipEquivalentCut>0.</MipEquivalentCut>
    </algorithm>

    <algorithm type = "LArVisualMonitoring">
        <ShowMCParticles>false</ShowMCParticles>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters>
        <ShowCurrentPfos>false</ShowCurrentPfos>
        <CaloHitListNames>CaloHitListW CaloHitListU CaloHitListV</CaloHitListNames>
        <ShowDetector>false</ShowDetector>
        <BlackBackground>false</BlackBackground>
        <HitColors>iterate</HitColors>
        <DetectorView>xz</DetectorView>
    </algorithm>

    <!-- 2D cosmic ray reconstruction, W View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListW</InputCaloHitListName>
        <ClusterListName>ClustersW</ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArKinkSplitting"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting"><CosmicMode>true</CosmicMode></algorithm>
    <algorithm type = "LArDeltaRaySplitting"><CosmicMode>true</CosmicMode></algorithm>
    <algorithm type = "LArCrossedTrackSplitting"/>
    <algorithm type = "LArCosmicRaySplitting"/>
    <algorithm type = "LArCosmicRayExtension"/>
    <algorithm type = "LArDeltaRayExtension"/>
    <algorithm type = "LArTrackConsolidation">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>

    <!-- 2D cosmic ray reconstruction, U View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListU</InputCaloHitListName>
        <ClusterListName>ClustersU </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArKinkSplitting"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting"><CosmicMode>true</CosmicMode></algorithm>
    <algorithm type = "LArDeltaRaySplitting"><CosmicMode>true</CosmicMode></algorithm>
    <algorithm type = "LArCrossedTrackSplitting"/>
    <algorithm type = "LArCosmicRaySplitting"/>
    <algorithm type = "LArCosmicRayExtension"/>
    <algorithm type = "LArDeltaRayExtension"/>
    <algorithm type = "LArTrackConsolidation">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>

    <!-- 2D cosmic ray reconstruction, V View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListV</InputCaloHitListName>
        <ClusterListName>ClustersV</ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArKinkSplitting"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting"><CosmicMode>true</CosmicMode></algorithm>
    <algorithm type = "LArDeltaRaySplitting"><CosmicMode>true</CosmicMode></algorithm>
    <algorithm type = "LArCrossedTrackSplitting"/>
    <algorithm type = "LArCosmicRaySplitting"/>
    <algorithm type = "LArCosmicRayExtension"/>
    <algorithm type = "LArDeltaRayExtension"/>
    <algorithm type = "LArTrackConsolidation">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>

    <!-- 3D cosmic ray reconstruction -->
    <algorithm type = "LArThreeDTransverseTracks">
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>Particles3D</OutputPfoListName>
        <TrackTools>
            <tool type = "LArClearTracks"/>
            <tool type = "LArLongTracks"/>
            <tool type = "LArOvershootTracks"><SplitMode>true</SplitMode></tool>
            <tool type = "LArUndershootTracks"><SplitMode>true</SplitMode></tool>
            <tool type = "LArOvershootTracks"><SplitMode>false</SplitMode></tool>
            <tool type = "LArUndershootTracks"><SplitMode>false</SplitMode></tool>
            <tool type = "LArMissingTrackSegment"/>
            <tool type = "LArTrackSplitting"/>
            <tool type = "LArLongTracks"><MinMatchedFraction>0.75</MinMatchedFraction><MinXOverlapFraction>0.75</MinXOverlapFraction></tool>
            <tool type = "LArMissingTrack"/>
        </TrackTools>
    </algorithm>
    <algorithm type = "LArThreeDLongitudinalTracks">
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>Particles3D</OutputPfoListName>
        <TrackTools>
            <tool type = "LArClearLongitudinalTracks"/>
            <tool type = "LArMatchedEndPoints"/>
        </TrackTools>
    </algorithm>
    <algorithm type = "LArThreeDTrackFragments">
        <MinClusterLength>10.0</MinClusterLength>
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>Particles3D</OutputPfoListName>
        <TrackTools>
            <tool type = "LArClearTrackFragments"/>
        </TrackTools>
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>
    <algorithm type = "LArCosmicRayTrackMatching">
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>Particles3D</OutputPfoListName>
    </algorithm>

    <!-- 2D cosmic ray shower clusters -->
    <algorithm type = "LArListDissolution">
        <WarnIfClustersUnavailable>false</WarnIfClustersUnavailable>
        <ClusterListNames>ClustersU ClustersV ClustersW</ClusterListNames>
    </algorithm>
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListW</InputCaloHitListName>
        <ClusterListName>ClustersW</ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListU</InputCaloHitListName>
        <ClusterListName>ClustersU</ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListV</InputCaloHitListName>
        <ClusterListName>ClustersV</ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>

    <!-- 2D/3D cosmic ray shower reconstruction -->
    <algorithm type = "LArDeltaRayIdentification">
        <ParentPfoListName>Particles3D</ParentPfoListName>
        <DaughterPfoListName>DaughterParticles3D</DaughterPfoListName>
    </algorithm>
    <algorithm type = "LArDeltaRayGrowing">
        <InputClusterListName>ClustersW</InputClusterListName>
        <ParentPfoListName>Particles3D</ParentPfoListName>
        <DaughterPfoListName>DaughterParticles3D</DaughterPfoListName>
    </algorithm>
    <algorithm type = "LArDeltaRayGrowing">
        <InputClusterListName>ClustersU</InputClusterListName>
        <ParentPfoListName>Particles3D</ParentPfoListName>
        <DaughterPfoListName>DaughterParticles3D</DaughterPfoListName>
    </algorithm>
    <algorithm type = "LArDeltaRayGrowing">
        <InputClusterListName>ClustersV</InputClusterListName>
        <ParentPfoListName>Particles3D</ParentPfoListName>
        <DaughterPfoListName>DaughterParticles3D</DaughterPfoListName>
    </algorithm>
    <algorithm type = "LArDeltaRayMatching">
        <ParentPfoListName>Particles3D</ParentPfoListName>
        <DaughterPfoListName>DaughterParticles3D</DaughterPfoListName>
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
    </algorithm>

    <!-- 3D cosmic ray shower remnants -->
    <algorithm type = "LArSimpleClusterMerging">
        <InputClusterListName>ClustersW</InputClusterListName>
    </algorithm>
    <algorithm type = "LArSimpleClusterMerging">
        <InputClusterListName>ClustersU</InputClusterListName>
    </algorithm>
    <algorithm type = "LArSimpleClusterMerging">
        <InputClusterListName>ClustersV</InputClusterListName>
    </algorithm>
    <algorithm type = "LArThreeDRemnants">
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>Particles3D</OutputPfoListName>
        <TrackTools>
            <tool type = "LArClearRemnants"/>
        </TrackTools>
    </algorithm>

    <!-- 3D cosmic ray identification and removal -->
    <algorithm type = "LArCheatingCosmicRayIdentification">
        <InputPfoListName>Particles3D</InputPfoListName>
        <OutputPfoListName>CosmicRayParticles3D</OutputPfoListName>
        <InputDaughterPfoListName>DaughterParticles3D</InputDaughterPfoListName>
        <OutputDaughterPfoListName>DaughterCosmicRayParticles3D</OutputDaughterPfoListName>
    </algorithm>
    <algorithm type = "LArListDissolution">
        <PfoListNames>Particles3D DaughterParticles3D</PfoListNames>
        <WarnIfClustersUnavailable>false</WarnIfClustersUnavailable>
        <ClusterListNames>ClustersU ClustersV ClustersW</ClusterListNames>
    </algorithm>
    <algorithm type = "LArListMerging">
        <SourceClusterListNames>ClustersU ClustersV ClustersW</SourceClusterListNames>
        <TargetClusterListNames>CosmicRayClustersU CosmicRayClustersV CosmicRayClustersW</TargetClusterListNames>
    </algorithm>

    <!-- 3D cosmic-ray hit creation -->
    <algorithm type = "LArThreeDHitCreation">
        <InputPfoListName>CosmicRayParticles3D</InputPfoListName>
        <OutputCaloHitListName>CosmicRayCaloHitList3D</OutputCaloHitListName>
        <OutputClusterListName>CosmicRayClusters3D</OutputClusterListName>
        <HitCreationTools>  
            <tool type = "LArClearTransverseTrackHits"><MinViews>3</MinViews></tool>
            <tool type = "LArClearLongitudinalTrackHits"><MinViews>3</MinViews></tool>
            <tool type = "LArMultiValuedLongitudinalTrackHits"><MinViews>3</MinViews></tool>
            <tool type = "LArMultiValuedTransverseTrackHits"><MinViews>3</MinViews></tool>
            <tool type = "LArClearTransverseTrackHits"><MinViews>2</MinViews></tool>
            <tool type = "LArClearLongitudinalTrackHits"><MinViews>2</MinViews></tool>
            <tool type = "LArMultiValuedLongitudinalTrackHits"><MinViews>2</MinViews></tool>
        </HitCreationTools>
    </algorithm>
    <algorithm type = "LArThreeDHitCreation">
        <InputPfoListName>DaughterCosmicRayParticles3D</InputPfoListName>
        <OutputCaloHitListName>DaughterCosmicRayCaloHitList3D</OutputCaloHitListName>
        <OutputClusterListName>DaughterCosmicRayClusters3D</OutputClusterListName>
        <HitCreationTools>
            <tool type = "LArThreeViewShowerHits"/>
            <tool type = "LArTwoViewShowerHits"/>
            <tool type = "LArDeltaRayShowerHits"/>
        </HitCreationTools>
    </algorithm>


    <!-- NEUTRINO-INDUCED EVENT RECONSTRUCTION: TRACKS -->
    <algorithm type = "LArListPreparation">
        <OnlyAvailableCaloHits>true</OnlyAvailableCaloHits>
        <OutputCaloHitListNameW>NeutrinoCaloHitListW</OutputCaloHitListNameW>
        <OutputCaloHitListNameU>NeutrinoCaloHitListU</OutputCaloHitListNameU>
        <OutputCaloHitListNameV>NeutrinoCaloHitListV</OutputCaloHitListNameV>
        <FilteredCaloHitListName>NeutrinoCaloHitListFiltered</FilteredCaloHitListName>
        <CurrentCaloHitListReplacement>NeutrinoCaloHitListW</CurrentCaloHitListReplacement>
        <MCNeutrinoSelection>true</MCNeutrinoSelection>
        <OutputMCParticleListNameU>NeutrinoMCParticleListU</OutputMCParticleListNameU>
        <OutputMCParticleListNameV>NeutrinoMCParticleListV</OutputMCParticleListNameV>
        <OutputMCParticleListNameW>NeutrinoMCParticleListW</OutputMCParticleListNameW>
        <OutputMCParticleListName3D>NeutrinoMCParticleList3D</OutputMCParticleListName3D>
        <CurrentMCParticleListReplacement>NeutrinoMCParticleList3D</CurrentMCParticleListReplacement>
        <MipEquivalentCut>0.</MipEquivalentCut>
    </algorithm>

    <!-- 2D neutrino-induced event reconstruction, W View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>NeutrinoCaloHitListW</InputCaloHitListName>
        <ClusterListName>ClustersW</ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting"/>
    <algorithm type = "LArKinkSplitting"/>

    <!-- 2D neutrino-induced event reconstruction, U View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>NeutrinoCaloHitListU</InputCaloHitListName>
        <ClusterListName>ClustersU</ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting"/>
    <algorithm type = "LArKinkSplitting"/>

    <!-- 2D neutrino-induced event reconstruction, V View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>NeutrinoCaloHitListV</InputCaloHitListName>
        <ClusterListName>ClustersV</ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting"/>
    <algorithm type = "LArKinkSplitting"/>

    <!-- 3D neutrino-induced event reconstruction -->
    <algorithm type = "LArThreeDTransverseTracks">
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>TrackParticles3D</OutputPfoListName>
        <TrackTools>
            <tool type = "LArClearTracks"/>
            <tool type = "LArLongTracks"/>
            <tool type = "LArOvershootTracks"><SplitMode>true</SplitMode></tool>
            <tool type = "LArUndershootTracks"><SplitMode>true</SplitMode></tool>
            <tool type = "LArOvershootTracks"><SplitMode>false</SplitMode></tool>
            <tool type = "LArUndershootTracks"><SplitMode>false</SplitMode></tool>
            <tool type = "LArMissingTrackSegment"/>
            <tool type = "LArTrackSplitting"/>
            <tool type = "LArLongTracks"><MinMatchedFraction>0.75</MinMatchedFraction><MinXOverlapFraction>0.75</MinXOverlapFraction></tool>
            <tool type = "LArMissingTrack"/>
        </TrackTools>
    </algorithm>
    <algorithm type = "LArThreeDLongitudinalTracks">
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>TrackParticles3D</OutputPfoListName>
        <TrackTools>
            <tool type = "LArClearLongitudinalTracks"/>
            <tool type = "LArMatchedEndPoints"/>
        </TrackTools>
    </algorithm>
    <algorithm type = "LArThreeDTrackFragments">
        <MinClusterLength>5.0</MinClusterLength>
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>TrackParticles3D</OutputPfoListName>
        <TrackTools>
            <tool type = "LArClearTrackFragments"/>
        </TrackTools>
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>

    <!-- NEUTRINO-INDUCED EVENT RECONSTRUCTION: SHOWERS -->
    <algorithm type = "LArClusterCharacterisation">
        <InputClusterListName>ClustersU</InputClusterListName>
        <ShouldRemoveShowerPfos>true</ShouldRemoveShowerPfos>
        <InputPfoListNames>TrackParticles3D</InputPfoListNames>
    </algorithm>
    <algorithm type = "LArClusterCharacterisation">
        <InputClusterListName>ClustersV</InputClusterListName>
        <ShouldRemoveShowerPfos>true</ShouldRemoveShowerPfos>
        <InputPfoListNames>TrackParticles3D</InputPfoListNames>
    </algorithm>
    <algorithm type = "LArClusterCharacterisation">
        <InputClusterListName>ClustersW</InputClusterListName>
        <ShouldRemoveShowerPfos>true</ShouldRemoveShowerPfos>
        <InputPfoListNames>TrackParticles3D</InputPfoListNames>
    </algorithm>

    <algorithm type = "LArThreeDShowers">
        <InputClusterListNameU>ClustersU</InputClusterListNameU>
        <InputClusterListNameV>ClustersV</InputClusterListNameV>
        <InputClusterListNameW>ClustersW</InputClusterListNameW>
        <OutputPfoListName>ShowerParticles3D</OutputPfoListName>
        <ShowerTools>
            <tool type = "LArClearShowers"/>
            <tool type = "LArSplitShowers"><NCommonClusters>1</NCommonClusters></tool>
            <tool type = "LArSplitShowers"><NCommonClusters>2</NCommonClusters></tool>
            <tool type = "LArSimpleShowers"/>
        </ShowerTools>
    </algorithm>

    <!-- NEUTRINO-INDUCED EVENT RECONSTRUCTION: MOP UP -->
    <algorithm type = "LArBoundedClusterMerging">
        <PfoListName>ShowerParticles3D</PfoListName>
        <RemnantClusterListNames>ClustersU ClustersV ClustersW</RemnantClusterListNames>
    </algorithm>
    <algorithm type = "LArConeBasedMerging">
        <PfoListName>ShowerParticles3D</PfoListName>
        <RemnantClusterListNames>ClustersU ClustersV ClustersW</RemnantClusterListNames>
    </algorithm>
    <algorithm type = "LArIsolatedHitMerging">
        <PfoListName>ShowerParticles3D</PfoListName>
        <RemnantClusterListNames>ClustersU ClustersV ClustersW</RemnantClusterListNames>
    </algorithm>

    <!-- NEUTRINO-INDUCED EVENT RECONSTRUCTION: 3D HITS -->
    <algorithm type = "LArThreeDHitCreation">
        <InputPfoListName>TrackParticles3D</InputPfoListName>
        <OutputCaloHitListName>TrackCaloHitList3D</OutputCaloHitListName>
        <OutputClusterListName>TrackClusters3D</OutputClusterListName>
        <HitCreationTools>
            <tool type = "LArClearTransverseTrackHits"><MinViews>3</MinViews></tool>
            <tool type = "LArClearLongitudinalTrackHits"><MinViews>3</MinViews></tool>
            <tool type = "LArMultiValuedLongitudinalTrackHits"><MinViews>3</MinViews></tool>
            <tool type = "LArMultiValuedTransverseTrackHits"><MinViews>3</MinViews></tool>
            <tool type = "LArClearTransverseTrackHits"><MinViews>2</MinViews></tool>
            <tool type = "LArClearLongitudinalTrackHits"><MinViews>2</MinViews></tool>
            <tool type = "LArMultiValuedLongitudinalTrackHits"><MinViews>2</MinViews></tool>
        </HitCreationTools>
    </algorithm>
    <algorithm type = "LArThreeDHitCreation">
        <InputPfoListName>ShowerParticles3D</InputPfoListName>
        <OutputCaloHitListName>ShowerCaloHitList3D</OutputCaloHitListName>
        <OutputClusterListName>ShowerClusters3D</OutputClusterListName>
        <HitCreationTools>
            <tool type = "LArThreeViewShowerHits"/>
            <tool type = "LArTwoViewShowerHits"/>
            <tool type = "LArDeltaRayShowerHits"/>
        </HitCreationTools>
    </algorithm>

    <algorithm type = "LArNeutrinoBuilding">
        <DaughterPfoListNames>TrackParticles3D ShowerParticles3D</DaughterPfoListNames>
        <OutputPfoListName>NeutrinoParticles3D</OutputPfoListName>
    </algorithm>

    <!-- FINAL PARTICLE OUTPUT -->
    <algorithm type = "LArListMerging">
        <SourcePfoListNames>CosmicRayParticles3D NeutrinoParticles3D</SourcePfoListNames>
        <TargetPfoListNames>OutputParticles3D OutputParticles3D</TargetPfoListNames>
    </algorithm>

    <algorithm type = "LArListChanging">
        <PfoListName>OutputParticles3D</PfoListName>
    </algorithm>

    <algorithm type = "LArVisualMonitoring">
        <ShowMCParticles>false</ShowMCParticles>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters>
        <ShowCurrentPfos>false</ShowCurrentPfos>
        <PfoListNames>OutputParticles3D</PfoListNames>
        <ShowDetector>false</ShowDetector>
        <ShowOnlyAvailable>false</ShowOnlyAvailable>
        <BlackBackground>false</BlackBackground>
        <HitColors>iterate</HitColors>
        <DetectorView>xz</DetectorView>
    </algorithm>

    <algorithm type = "LArVisualMonitoring">
        <ShowMCParticles>false</ShowMCParticles>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters>
        <ShowCurrentPfos>false</ShowCurrentPfos>
        <ClusterListNames>ClustersU ClustersV ClustersW</ClusterListNames>
        <CaloHitListNames>NeutrinoCaloHitListU NeutrinoCaloHitListV NeutrinoCaloHitListW</CaloHitListNames>
        <ShowDetector>false</ShowDetector>
        <ShowOnlyAvailable>true</ShowOnlyAvailable>
        <BlackBackground>false</BlackBackground>
        <HitColors>iterate</HitColors>
        <DetectorView>xz</DetectorView>
    </algorithm>
</pandora>
